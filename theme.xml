<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>7</formatVersion>
   
<!-- Configurazione tema --> 
   <include>./config.xml</include>
   <include>./views/gamecarousel.xml</include>


<!-- Impostazioni globali --> 
  
  <view name="screen">
	<text name="clock">
		<pos>0.9 0.009</pos>
		<size>0 0</size>
		<fontSize>0.03</fontSize>
	</text>

	<controllerActivity name="controllerActivity">
		<pos>0.014 0.01</pos>
	</controllerActivity>
</view>



<!-- Menu batocera titolo--> 
 <view name="menu">
    <menuText name="menutitle">
	   <fontPath>./tema/fonts/SnesItalic.ttf</fontPath>
      <color>${accentColor}</color>
    </menuText>
<!-- Menu batocera tutti i testi--> 
<text name="systemInfo">
			<pos>0.0 0.61</pos>
			<backgroundColor>00000000</backgroundColor>
			<color>${accentColor}</color>
			<fontPath>./tema/fonts/RobotoRegular.ttf</fontPath>
			<fontSize>0.035</fontSize>
</text>	
<menuText name="menufooter">
			<fontPath>./tema/fonts/RobotoRegular.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<color>${accentColor}</color>
</menuText>
<menuText name="menutext">
	<fontPath>./tema/fonts/RobotoRegular.ttf</fontPath>
      <color>ffffff</color>
      <selectorColor>${accentColor}</selectorColor>
      <selectorColorEnd>${accentColor}</selectorColorEnd>
      <selectedColor>000000</selectedColor>
      <separatorColor>${accentColor2t}</separatorColor>
	  <fontSize>0.035</fontSize>
</menuText>
<menuTextSmall name="menutextsmall">
			<fontPath>./tema/fonts/RobotoRegular.ttf</fontPath>
			<fontSize>0.035</fontSize>
			<color>${accentColor}</color>
</menuTextSmall>


<!-- Menu batocera sfondo--> 
    <menuBackground name="menubg">
      <color>000000</color>
      <path>./tema/images/dark.png</path>
    </menuBackground>
  </view> 

<!-- Sistema -->

<view name="system">
<!-- loghi emulatori -->
<image name="logo">
			<path>./tema/loghi/${system.theme}.svg</path>
			<color>ffffff</color>
		</image>
		
<!-- simulazione logo testuale per loghi non presenti -->	
<text name="logoText" >
            <fontPath>./tema/fonts/SnesItalic.ttf</fontPath>
            <color>ffffff</color>
			<size>1 0.25</size>
			<fontSize>0.11</fontSize>
            <forceUppercase>true</forceUppercase>
         </text>	
<!-- informazioni numero di rom presenti in un sistema -->
<text name="systemInfo">     
		 <color>${accentColor}</color>
		</text> 
<!-- grafiche in aggiunta sulla home -->
<image name="systeminfosfondo" extra="true">
			<tile>false</tile>
			<path>./subsets/carosello/linee.png</path>
			<color>${accentColor2}</color>
			<zIndex>100</zIndex>	   
		</image>

	
<!-- barra suggerimenti in basso -->
   <helpsystem name="help">
          <fontPath>./tema/fonts/SnesItalic.ttf</fontPath>
	     <fontSize>0.035</fontSize>
		 <pos>0.5 0.95</pos>
		 <origin>0.5 0.5</origin>
         <textColor>ffffff97</textColor>
         <iconColor>ffffff97</iconColor>
      </helpsystem>	  
</view> 		
		
<!-- Stile lista rom -->	

<!-- loghi di sistema -->
<view name="detailed, video,grid,gamecarousel">
                <image name="system" extra="true">
                   <origin>0.5 0.5</origin>
                   <pos>0.75 0.17</pos>
                   <maxSize>0.25 0.1</maxSize>
                   <path>./tema/loghi/${system.theme}.svg</path>
				   <color>000000</color>
                   <zIndex>3</zIndex>            
                </image>
</view>	

<view name="basic">
                <image name="system" extra="true">
                   <origin>0.5 0</origin>
                   <pos>0.5 0.02</pos>
                   <maxSize>0.8 .12</maxSize>
                   <path>./tema/loghi/${system.theme}.svg</path>
				   <color>000000</color>
                   <zIndex>3</zIndex>            
                </image>
</view>		

<!-- barra suggerimenti in basso -->
   <view name="detailed,video,basic,grid,gamecarousel">
      <helpsystem name="help">
          <fontPath>./tema/fonts/SnesItalic.ttf</fontPath>
	     <fontSize>0.035</fontSize>
		 <pos>0.05 0.95</pos>
		 <origin>0.0 0.0</origin>
         <textColor>ffffff97</textColor>
         <iconColor>ffffff97</iconColor>
      </helpsystem>
   </view>  

<!-- lista giochi caratteristiche testo -->
<view name="basic,detailed,video">
      <textlist name="gamelist">      
         <selectorColor>${accentColor}</selectorColor>
         <selectedColor>000000</selectedColor>
         <primaryColor>ffffff</primaryColor>
         <secondaryColor>${accentColor}</secondaryColor>
         <fontPath>./tema/fonts/RobotoRegular.ttf</fontPath>
         <fontSize>0.028</fontSize>
         <forceUppercase>1</forceUppercase>
         <scrollSound>./tema/sounds/Move.wav</scrollSound>
         <zIndex>3</zIndex>                          
      </textlist>  
</view> 

<!-- lista giochi sfondo vista basic--> 
<view name="basic">
      <!-- layout lista giochi -->
      <textlist name="gamelist">                          
         <pos>0.025 0.2</pos>
         <size>0.95 0.72</size>
         <alignment>center</alignment>                       
      </textlist>
	  <!-- sfondo lista giochi -->
      <image name="background" extra="true">
         <tile>true</tile>
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./tema/images/bg.png</path>
		 <color>000000</color>
         <zIndex>2</zIndex>    
	</image>
    <!-- grafiche aggiuntive sfondo-->
	<image name="dark" extra="true">
			<tile>true</tile>
			<pos>0.025 0.05</pos>
			<size>0.95 0.88</size>
			<path>./tema/images/dark.png</path>
			 <color>000000</color>
			<zIndex>2</zIndex>	   
	</image>	
	<image name="white" extra="true">
			<tile>true</tile>
			<size>0.98 0.2</size>
			<pos>0.01 0</pos>
			<path>./tema/images/white.png</path>
			 <color>${accentColor2}</color>
			<zIndex>2</zIndex>	   
		</image>
</view> 

<!-- lista giochi sfondo viste detailed,video,grid-->   
    
  <view name="detailed,video,grid,gamecarousel">
       <!-- sfondo lista giochi -->
      <image name="background" extra="true">
       <tile>true</tile>
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./tema/images/bg.png</path>
         <zIndex>1</zIndex>    
      </image>     
	 <!-- grafiche aggiuntive sfondo-->
	 <image name="barra" extra="true">
			<tile>false</tile>
			 <origin>0.5 0.5</origin>
             <pos>0.80 0.17</pos>
			 <maxSize>0.55 0.2</maxSize>
			<path>./subsets/carosello/linee.png</path>
			<color>${accentColor2}</color>
			<zIndex>1</zIndex>	   
		</image>	

	<image name="line" extra="true">
			<tile>true</tile>
			<size>0.52 0.002</size>
			<pos>0.50 0.90</pos>
			<path>./tema/images/white.png</path>
			 <color>${accentColor2t}</color>
			<zIndex>2</zIndex>	   
		</image>

	<image name="line2" extra="true">
			<tile>true</tile>
			<size>0.52 0.002</size>
			<pos>0.50 0.40</pos>
			<path>./tema/images/white.png</path>
			 <color>${accentColor2t}</color>
			<zIndex>2</zIndex>	   
		</image>
</view>     

<!-- lista giochi immagini,video e informazioni testuali-->     

<view name="detailed, video">
		<!-- layout lista giochi -->
		<textlist name="gamelist">                          
          <pos>0.025 0.07</pos>
         <size>0.45 0.875</size>
         <alignment>left</alignment>                       
      </textlist>
	      
</view>
  <!-- layout immagine gioco -->
 <view name="detailed,gamecarousel">
      <image name="md_image">
         <origin>0.5 0.5</origin>
         <pos>0.76 0.65</pos>
         <maxSize>0.42 0.42</maxSize>
         <zIndex>3</zIndex>         
      </image>   

   </view>

  <!-- layout video gioco -->
<feature supported="video">
   <view name="video,gamecarousel">   
      <video name="md_video">
         <origin>0.5 0.5</origin>
         <pos>0.76 0.65</pos>
         <maxSize>0.42 0.42</maxSize>
         <delay>3</delay>
         <zIndex>3</zIndex>         
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
         <showSnapshotDelay>true</showSnapshotDelay>
      </video>         
   </view>
</feature>
<view name="detailed,video,grid,gamecarousel">
      <!-- rating gioco-->	
      <rating name="md_rating">
         <origin>0.5 0.5</origin>
         <zIndex>5</zIndex>       
         <pos>0.875 0.35</pos>
         <size>0.03 0.03</size>
         <zIndex>3</zIndex>
         <filledPath>./tema/images/star_full.svg</filledPath>
         <unfilledPath>./tema/images/star_hollow.svg</unfilledPath>
		 <color>${accentColor}</color>
    </rating>
	<!-- testo introduttivo sviluppatore gioco-->	
      <text name="md_lbl_developer">
         <origin>0.5 0.5</origin>
		 <fontPath>./tema/fonts/RobotoRegular.ttf</fontPath>
		 <fontSize>0.03</fontSize>
         <pos>0.825 0.31</pos>
         <size>0.6 0.6</size>
         <color>ffffff</color>
         <zIndex>3</zIndex> 
      </text>
	  <!-- sviluppatore gioco-->	
      <text name="md_developer">
         <origin>0.5 0.5</origin>
         <pos>0.99 0.31</pos>
         <size>0.6 0.6</size>
		 <fontPath>./tema/fonts/RobotoRegular.ttf</fontPath>
		 <fontSize>0.03</fontSize>
         <color>ffffff</color>
         <zIndex>3</zIndex>
      </text>
	  <!-- testo introduttivo data di rilascio gioco-->	
      <text name="md_lbl_releasedate">
         <origin>0.5 0.5</origin>
         <pos>0.825 0.35</pos>
         <size>0.6 0.6</size>
		 <fontPath>./tema/fonts/RobotoRegular.ttf</fontPath>
		 <fontSize>0.03</fontSize>
         <color>ffffff</color>
         <zIndex>3</zIndex>                  
      </text>
	   <!-- data di rilascio gioco-->	
      <datetime name="md_releasedate">
         <origin>0.5 0.5</origin>
         <pos>0.99 0.35</pos>
         <size>0.6 0.6</size>
		 <fontPath>./tema/fonts/RobotoRegular.ttf</fontPath>
		 <fontSize>0.03</fontSize>
         <color>ffffff</color>
         <zIndex>3</zIndex>         
      </datetime>
</view>
   
<view name="grid">
         <!-- layout vista a griglia-->	
		<image name="header" extra="true">
			<path>null</path>
		</image>
		<text name="md_grid">
			<size>0.48 0.90</size>
			<pos>0.01 0.03</pos>
		</text>
		<imagegrid name="gamegrid">
			<pos>0.01 0.1</pos>
			<size>0.48 0.8</size>
			<margin>0.01 0.01</margin>
			<autoLayout>1 2</autoLayout>
		</imagegrid>
        <gridtile name="default">
			<backgroundImage>./tema/images/bg.png</backgroundImage>
			<backgroundColor>000000</backgroundColor>
		</gridtile>
		<!-- layout nome gioco-->	
		<text name="md_name">
			<pos>0.25 0.05</pos>
			<size>0.48 0.05</size>
			<origin>0.5 0</origin>
		    <fontPath>./tema/fonts/RobotoRegular.ttf</fontPath>
            <fontSize>0.035</fontSize>
            <forceUppercase>1</forceUppercase>
			<color>000000</color>
			<backgroundColor>${accentColor}</backgroundColor>
		</text>
		<!-- layout descrizione gioco -->	
		<text name="md_description">
			<color>ffffff</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./tema/fonts/RobotoRegular.ttf</fontPath>
			<fontSize>0.03</fontSize>
			<size>0.42 0.42</size>
			<origin>0.5 0.5</origin>
            <pos>0.74 0.65</pos>
		</text>
	</view>

</theme>
