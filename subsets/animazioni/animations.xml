<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>7</formatVersion>

 <include>./config.xml</include>
 
 <!-- Sistema -->
<view name="system">

<!-- grafiche in aggiunta sulla home -->
<image name="systeminfosfondo" extra="true">
			<zIndex>100</zIndex>
			<storyboard>
			<animation property="x" from="1" begin="1" duration="500" mode="easeIn"/>
			</storyboard>				
		</image>
		
<image name="arcadeled" extra="true">
      <zIndex>99</zIndex>
	  <storyboard>
			<animation property="opacity" from="0" to="1" duration="3000" mode="easeIn"/>
	  </storyboard>
    </image>
	
	<image name="arcadestrip" extra="true">
      <zIndex>99</zIndex>
	  <storyboard>
			<animation property="opacity" from="0.05" to="1" duration="1000" mode="easeIn"/>
	  </storyboard>
    </image>	
	
	<image name="controllers" extra="true">
      <zIndex>7</zIndex>
	    <storyboard>
			<animation property="scale" from="2" to="1" duration="500" mode="easeOut"/>
	  </storyboard>
    </image>
	
	<image name="sistemi" extra="true">
      <zIndex>99</zIndex>
	  <storyboard>
			<animation property="opacity" from="0" to="1" duration="1200" mode="easeIn"/>
	  </storyboard>
    </image>
	
</view> 		

<!-- lista giochi -->
<view name="basic, detailed,video,gamecarousel">
    <textlist name="gamelist">
	<scaleOrigin>0.5 0.5</scaleOrigin>
      <storyboard>
        <animation property="scale" from="0" to="1" duration="380" mode="easeOut"/>
      </storyboard>
    </textlist>
  </view>
  
  <text name="gridtile_selected">
	<storyboard>
        <animation property="glow" from="0" to="1" duration="1200" mode="easeOut"/>
